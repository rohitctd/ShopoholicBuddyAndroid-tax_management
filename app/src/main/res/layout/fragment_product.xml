<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_login">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ll_root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:visibility="gone">

            <com.shopoholicbuddy.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:text="@string/category_and_sub_category"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_select_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/category"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="45"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@color/colorSeparator" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_select_sub_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/sub_categories"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="45"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@color/colorSeparator" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorSeparator" />


            <com.shopoholicbuddy.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/hunt_name"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_hunt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/hunt_name"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLength="100"
                android:maxLines="3"
                android:minLines="1"
                android:ellipsize="end"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@color/colorSeparator" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorSeparator" />


            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/label_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/price_range"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_price_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/price_range"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="45"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular" />

            <View
                android:id="@+id/view_price"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@color/colorSeparator" />


            <View
                android:id="@+id/view_price_sep"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorSeparator" />


            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/upload_images"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold"
                tools:ignore="RelativeOverlap" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                tools:itemCount="5" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/description"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomEditText
                android:id="@+id/add_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/round_corner_separator_stroke_transparent_bg"
                android:ellipsize="end"
                android:focusableInTouchMode="true"
                android:gravity="start|top"
                android:hint="@string/description"
                android:maxLength="500"
                android:minLines="3"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/colorLightWhite"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular"
                tools:ignore="RtlSymmetry,UnusedAttribute" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorSeparator" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:text="@string/txt_address"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:background="@drawable/round_corner_separator_stroke_transparent_bg"
                android:focusableInTouchMode="true"
                android:gravity="top|start"
                android:hint="@string/txt_address"
                android:maxLines="3"
                android:minLines="3"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                app:fontName="@string/orkney_regular" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@color/colorSeparator" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/label_target_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:text="@string/target_area"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_target_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:background="@drawable/round_corner_separator_stroke_transparent_bg"
                android:focusableInTouchMode="true"
                android:gravity="top|start"
                android:hint="@string/target_area"
                android:maxLines="3"
                android:minLines="3"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                app:fontName="@string/orkney_regular" />

            <View
                android:id="@+id/view_target_area"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@color/colorSeparator" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/label_expected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/expected_delivery_date"
                android:textColor="@color/colorLightWhite"
                android:textSize="@dimen/_13ssp"
                app:fontName="@string/orkney_bold" />

            <com.shopoholicbuddy.customviews.CustomTextView
                android:id="@+id/tv_expected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/expected_delivery_date"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="45"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHintText"
                android:textSize="@dimen/_10ssp"
                app:fontName="@string/orkney_regular" />

            <View
                android:id="@+id/expected_date"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@color/colorSeparator" />

            <View
                android:id="@+id/view_expected_date"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@color/colorSeparator" />


            <RelativeLayout
                android:id="@+id/rl_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.shopoholicbuddy.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/selected_slot"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="@string/orkney_bold"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/iv_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/add_slots"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp"
                    android:src="@drawable/ic_add_deal_timing"
                    tools:ignore="RelativeOverlap" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_time_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_dates"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp" />

                <View
                    android:id="@+id/view_time_slots"
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_below="@+id/rv_time_slots"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorSeparator" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_accept_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="gone">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/layout_accept_button_loader"
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@android:color/transparent">

                    <com.shopoholicbuddy.customviews.CustomButton
                        android:id="@+id/btn_accept"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_button_circle"
                        android:gravity="center"
                        android:text="@string/log_in"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="visible"
                        app:fontName="@string/orkney_bold" />

                    <View
                        android:id="@+id/accept_button_loader"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5ssp"
                        android:background="@drawable/ic_loader_element"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/accept_button_dot"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_11ssp"
                        android:background="@drawable/ic_loader_element"
                        android:visibility="visible" />
                </FrameLayout>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/layout_reject_button_loader"
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@android:color/transparent">

                    <com.shopoholicbuddy.customviews.CustomButton
                        android:id="@+id/btn_reject"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:text="@string/log_in"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="visible"
                        app:fontName="@string/orkney_bold" />

                    <View
                        android:id="@+id/reject_button_loader"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5ssp"
                        android:background="@drawable/pink_circle"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/reject_button_dot"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_11ssp"
                        android:background="@drawable/pink_circle"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bidding_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">


                <com.shopoholicbuddy.customviews.CustomTextView
                    android:id="@+id/tv_bidding_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="@string/bidding_images"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="@string/orkney_bold"
                    tools:ignore="RelativeOverlap" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_bidding_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    tools:itemCount="5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorSeparator" />


                <com.shopoholicbuddy.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/bidding_price"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="@string/orkney_bold" />

                <com.shopoholicbuddy.customviews.CustomTextView
                    android:id="@+id/tv_bidding_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/bidding_price"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="45"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorHintText"
                    android:textSize="@dimen/_10ssp"
                    app:fontName="@string/orkney_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@color/colorSeparator" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorSeparator" />

                <com.shopoholicbuddy.customviews.CustomTextView
                    android:id="@+id/label_bidding_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/txt_estimate_delivery_date"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="@string/orkney_bold" />

                <com.shopoholicbuddy.customviews.CustomTextView
                    android:id="@+id/tv_bidding_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/txt_estimate_delivery_date"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="45"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorHintText"
                    android:textSize="@dimen/_10ssp"
                    app:fontName="@string/orkney_regular" />

                <View
                    android:id="@+id/bidding_date"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@color/colorSeparator" />

                <View
                    android:id="@+id/view_bidding_date"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@color/colorSeparator" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

