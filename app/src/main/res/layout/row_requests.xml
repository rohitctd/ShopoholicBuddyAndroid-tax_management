<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/_10sdp">

    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorPurple"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_regular"
        tools:text="5 min" />

    <LinearLayout
        android:id="@+id/ll_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:src="@drawable/round_corner_pink_bg"
            tools:ignore="ContentDescription" />

        <com.shopoholicbuddy.customviews.CustomTextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/new_delivery_request"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            app:fontName="@string/orkney_regular" />
    </LinearLayout>


    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_label"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:maxLines="1"
        tools:text="@string/dummy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />

    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_deal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxLines="1"
        tools:text="@string/dummy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />
    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_deal_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxLines="1"
        tools:text="@string/dummy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />
    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:maxLines="1"
        tools:text="@string/dummy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />
    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_delivery_charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_quantity"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:maxLines="1"
        tools:text="@string/dummy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_delivery_charges"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.shopoholicbuddy.customviews.CustomTextView
            android:id="@+id/tv_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:maxLines="1"
            android:text="@string/deilevery_to"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/_12ssp"
            app:fontName="@string/orkney_regular" />


        <com.shopoholicbuddy.customviews.CustomTextView
            android:id="@+id/tv_delivery_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            app:fontName="@string/orkney_regular" />


    </LinearLayout>

    <com.shopoholicbuddy.customviews.CustomTextView
        android:id="@+id/tv_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_address"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:maxLines="1"
        android:layout_alignParentEnd="true"
        android:text="@string/txt_hunt_closed"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_11ssp"
        app:fontName="@string/orkney_medium" />



</RelativeLayout>